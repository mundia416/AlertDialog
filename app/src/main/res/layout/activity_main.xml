            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="NOrmal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="179dp"
            tools:layout_editor_absoluteX="108dp" android:id="@+id/btnNormal"/>
    <Button
            android:text="Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="271dp"
